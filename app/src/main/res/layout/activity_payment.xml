<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_operation_explain"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_35"
        android:background="@color/white"
        android:gravity="center_vertical|right"
        android:paddingRight="@dimen/size_10"
        android:text="@string/head_operation_explain_title"
        android:textColor="@color/tv_blue" />

    <ListView
        android:id="@+id/payment_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@null" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:background="@color/view_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_all"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/size_15"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <CheckBox
                android:id="@+id/select_all_ck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/check_bg"
                android:button="@null"
                android:clickable="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_10"
                android:text="@string/ck_payment_all_title" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/offline_payment_reset"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/reset_bg_color"
                android:gravity="center"
                android:text="@string/hint_reset_title"
                android:textColor="@color/white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/offline_payment_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_style"
                android:gravity="center"
                android:text="@string/bt_offline_payment_title"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
