<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_bottom_layout_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center_vertical">

            <CheckBox
                android:id="@+id/layout_bottom_check_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_15"
                android:background="@drawable/check_bg"
                android:button="@null"
                android:clickable="false" />

            <TextView
                android:id="@+id/layout_bottom_ck_content_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_10"
                android:text="@string/ck_payment_all_title" />
        </LinearLayout>
        <!--android:id="@+id/settl_details_del_btn"-->
        <TextView
            android:id="@+id/layout_bottom_tv_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/text_color_blue2"
            android:gravity="center"
            android:text="@string/hint_settl_details_del_btn_title"
            android:textColor="@color/white" />
        <!--android:id="@+id/settl_details_add_btn"-->
        <TextView
            android:id="@+id/layout_bottom_tv_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/reset_bg"
            android:gravity="center"
            android:text="@string/hint_settl_details_add_btn_title"
            android:textColor="@color/white" />
        <!--android:id="@+id/details_affirm_btn"-->
        <TextView
            android:id="@+id/layout_bottom_tv_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/title_bg"
            android:gravity="center"
            android:text="@string/hint_settl_details_affirm_btn_title"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>
