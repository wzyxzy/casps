<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:background="@color/main_bg">
   <ScrollView
       android:id="@+id/price_search_Ll"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:overScrollMode="never"
       android:scrollbars="none">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/price_search_class_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:padding="@dimen/size_15"
            android:text="@string/buy"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_18"
            android:visibility="visible" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_10"
            android:background="@color/main_bg"/>

        <com.hj.casps.ui.MyGridView
            android:id="@+id/price_search_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transParent"
            android:horizontalSpacing="@dimen/size_3"
            android:numColumns="2"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:verticalSpacing="@dimen/size_3"></com.hj.casps.ui.MyGridView>
    </LinearLayout>
   </ScrollView>
    <ImageView
        android:id="@+id/price_search_totop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/selectpic02_ll"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:paddingBottom="@dimen/size_80"
        android:paddingLeft="@dimen/size_25"
        android:paddingRight="@dimen/size_25"
        android:paddingTop="@dimen/size_10"
        android:src="@mipmap/c_top"
        android:visibility="visible" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/price_search_totop"
        android:layout_alignParentRight="true"
        android:background="@color/transParent">

        <ImageView
            android:id="@+id/price_search_shopcart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="@dimen/size_10"
            android:paddingLeft="@dimen/size_25"
            android:paddingRight="@dimen/size_25"
            android:paddingTop="@dimen/size_25"
            android:src="@mipmap/c_shop"
            android:visibility="visible" />

        <TextView
            android:id="@+id/price_search_shopcart_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dp"

            android:layout_marginTop="28dp"
            android:background="@drawable/circle_text"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="10sp" />
    </RelativeLayout>

</RelativeLayout>
